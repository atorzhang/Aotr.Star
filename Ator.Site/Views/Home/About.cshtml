@{
    ViewData["Title"] = "关于本站";
}
<!-- 本页样式表 -->
@section Css{
    <link href="/css/Blog/about.css" rel="stylesheet" />
    <link href="/css/Blog/blog.css" rel="stylesheet" />
}
<!-- 主体（一般只改变这里的内容） -->
<div class="blog-body">
    <!-- 这个一般才是真正的主体内容 -->
    <div class="blog-container">
        <blockquote class="layui-elem-quote sitemap layui-breadcrumb shadow">
            <a href="/Home/Index" title="网站首页">网站首页</a>
            <a><cite>关于本站</cite></a>
        </blockquote>
        <div class="blog-main">
            <div class="layui-tab layui-tab-brief shadow" lay-filter="tabAbout">
                <ul class="layui-tab-title">
                    <li lay-id="1" class="layui-this">关于博客</li>
                    <li lay-id="2">关于作者</li>
                    <li lay-id="3" id="frinedlink">友情链接</li>
                    <li lay-id="4">留言墙</li>
                </ul>
                <div class="layui-tab-content">
                    <div class="layui-tab-item layui-show">
                        <div class="aboutinfo">
                            <div class="aboutinfo-figure">
                                <img alt="博客Log" src="@ViewBag.SiteLogo" />
                                <div><a class="long_wang animated fadeInLeftBig" href="@ViewBag.SiteUrl">@ViewBag.SiteName @ViewBag.SiteAuthor</a></div>
                            </div>
                            <p class="aboutinfo-introduce animated fadeInRightBig">@Html.Raw(ViewBag.gybk.InfoAbstract)</p>
                            <p class="aboutinfo-location animated fadeInLeftBig"><i class="fa fa-link"></i>&nbsp;&nbsp;<a target="_blank" href="@ViewBag.SiteUrl">@ViewBag.SiteUrl</a></p>
                            <hr />
                            <div class="aboutinfo-contact animated fadeInRightBig">
                                <a title="网站首页" href="/Home/Index"><i class="fa fa-home fa-2x" style="font-size:2.5em;position:relative;top:3px"></i></a>
                                <a title="文章专栏" href="/Home/Article"><i class="fa fa-file-text fa-2x"></i></a>
                                <a title="杂七杂八" href="/Home/Picture"><i class="fa fa-paper-plane-o fa-2x"></i></a>
                                <a title="点点滴滴" href="/Home/TimeLine"><i class="fa fa-hourglass-half fa-2x"></i></a>
                            </div>

                            <fieldset class="layui-elem-field layui-field-title animated fadeInLeftBig">
                                <legend>简介</legend>
                                <div class="layui-field-box aboutinfo-abstract">
                                       @Html.Raw(ViewBag.gybk.InfoContent)
                                </div>
                            </fieldset>
                        </div>
                    </div><!--关于网站End-->
                    <div class="layui-tab-item">
                        <div class="aboutinfo">
                            <div class="aboutinfo-figure">
                                <img src="@ViewBag.SiteLogo" />
                            </div>
                            <p class="aboutinfo-nickname" ">@ViewBag.SiteName @ViewBag.SiteAuthor</p>
                            <p class="aboutinfo-introduce animated fadeInLeftBig">@Html.Raw(ViewBag.gyzz.InfoAbstract)</p>
                            <p class="aboutinfo-location animated fadeInLeftBig"><i class="fa fa-location-arrow"></i>&nbsp;<span>@ViewBag.SiteAddr</span></p>
                            <hr />
                            <div class="aboutinfo-contact animated bounceIn">
                                <a target="_blank" title="QQ交流" href="http://shang.qq.com/email/stop/email_stop.html?qq= @ViewBag.SiteQQ"><i class="fa fa-qq fa-2x"></i></a>
                                <a target="_blank" title="给我写信" href="mailto: @ViewBag.SiteEmail"><i class="fa fa-envelope fa-2x"></i></a>
                                <a target="_blank" title="新浪微博" href="https://weibo.com/p/ @ViewBag.SiteWeibo"><i class="fa fa-weibo fa-2x"></i></a>
                                <a target="_blank" title="后台管理" href="/Admin/Home/Index"><i class="fa fa-database fa-2x"></i></a>
                            </div>
                            <fieldset class="layui-elem-field layui-field-title animated bounceInUp">
                                <legend>简介</legend>
                                <div class="layui-field-box aboutinfo-abstract abstract-bloger">
                                    @Html.Raw(ViewBag.gyzz.InfoContent)
                                </div>
                            </fieldset>
                        </div>
                    </div><!--关于作者End-->
                    <div class="layui-tab-item">
                        <div class="aboutinfo">
                            <div class="aboutinfo-figure">
                                <img src="@ViewBag.yqllImg" alt="友情链接" />
                            </div>
                            <p class="aboutinfo-nickname">友情链接</p>
                            <p class="aboutinfo-introduce">Name：@ViewBag.SiteName&nbsp;&nbsp;&nbsp;&nbsp;Site：@ViewBag.SiteUrl</p>
                            @Html.Raw(ViewBag.yqll.InfoContent)
                            <hr />
                            <div class="aboutinfo-contact">
                                <p style="font-size:2em;"> @Html.Raw(ViewBag.yqll.InfoSecTitle)</p>
                            </div>
                            <fieldset class="layui-elem-field layui-field-title animated fadeInRightBig">
                                <legend>Friend Link</legend>
                                <div class="layui-field-box">
                                    <ul class="friendlink">
                                        @foreach (SysLinkItem item in ViewBag.yqljLinks)
                                        {
                                            <li>
                                                <a target="_blank" href="@item.SysLinkUrl" title="@item.SysLinkName" class="friendlink-item">
                                                    <p class="friendlink-item-pic"><img src="@item.SysLinkImg" alt="@item.SysLinkName"></p>
                                                    <p class="friendlink-item-title">@item.SysLinkName</p>
                                                    <p class="friendlink-item-domain">@item.SysLinkUrl</p>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </fieldset>
                        </div>
                    </div><!--友情链接End-->
                    <div class="layui-tab-item">
                        <div class="aboutinfo">
                            <div class="aboutinfo-figure">
                                <img src="/images/Blog/messagewall.png" alt="留言墙" />
                            </div>
                            <p class="aboutinfo-nickname">留言墙</p>
                            <p class="aboutinfo-introduce">@Html.Raw(ViewBag.lyq.InfoAbstract)</p>
                            <p class="aboutinfo-location">
                                <i class="fa fa-clock-o"></i>&nbsp;<span id="time"></span>
                            </p>
                            <hr />
                            <div class="aboutinfo-contact">
                                <p style="font-size:2em;">@Html.Raw(ViewBag.lyq.InfoSecTitle)</p>
                            </div>
                            <fieldset class="layui-elem-field layui-field-title">
                                <legend>Leave a message</legend>
                                <div class="layui-field-box">
                                    <div class="leavemessage" style="text-align:initial">
                                        <form class="layui-form">
                                            <input type="hidden" id="user" value="@ViewBag.UserId" name="user" lay-verify="userId" />
                                            <div class="layui-form-item">
                                                <textarea name="content" lay-verify="content" id="remarkEditor" placeholder="请输入内容" class="layui-textarea"></textarea>
                                            </div>
                                            <div class="layui-form-item">
                                                <button class="layui-btn" lay-submit="formLeaveMessage" lay-filter="formLeaveMessage">提交留言</button>
                                            </div>
                                        </form>
                                        <ul class="blog-comment" style="text-align:left;" id="messageList"></ul>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div><!--留言墙End-->
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>

<!-- 本页脚本 -->
@section Scripts{
    <script src="/js/Blog/about.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $(".fa-info").parent().parent().addClass("layui-this");
            systemTime();
        });
    </script>
}

