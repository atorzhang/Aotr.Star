@{
    ViewData["Title"] = "文章专栏";
}
<!-- 本页样式表 -->
@section Css{
    <link href="/css/Blog/detail.css" rel="stylesheet" />
    <link href="/css/Blog/blog.css" rel="stylesheet" />
}

<div class="blog-body">
    <div class="blog-container">
        <div class="blog-main">
            <blockquote class="layui-elem-quote sitemap layui-breadcrumb shadow" style="visibility: visible;">
                <a href="/Home/Index" title="网站首页">网站首页<span class="layui-box">&gt;</span></a>
                <a href="/Home/Article" title="文章专栏">文章专栏<span class="layui-box">&gt;</span></a>
                <a><cite class="title">@Model.InfoTitle</cite></a>
            </blockquote>
            <div class="blog-main">

                <div id="parentArticleList" class="blog-main-left animated slideInLeft">

                    <div class="article-detail shadow">
                        <div class="article-detail-title title">@Model.InfoTitle</div>
                        <div class="article-detail-info">
                            <span>编辑时间：@Model.InfoPublishTime</span>
                            <span>作者：@Model.InfoAuthor</span>
                            <span>浏览量：@Model.InfoClicks</span>
                        </div>
                        <div id="articleContent" style="overflow: hidden;" class="article-detail-content">
                            <p>@Html.Raw(Model.InfoContent)</p>
                        </div>
                    </div>

                    <div class="blog-module shadow" style="box-shadow: 0 1px 8px #a6a6a6;">
                        <fieldset class="layui-elem-field layui-field-title" style="margin-bottom:0">
                            <legend>来说两句吧</legend>
                            <div class="layui-field-box">
                                <form class="layui-form">
                                    <input type="hidden" id="user" name="user" lay-verify="userId" value="@ViewBag.UserId">
                                    <input type="hidden" id="article" name="article" value="@Model.SysCmsInfoId">
                                    <div class="layui-form-item">
                                        <textarea name="content" lay-verify="content" id="remarkEditor" placeholder="请输入内容" class="layui-textarea layui-hide"></textarea>
                                    </div>
                                    <div class="layui-form-item ">
                                        <button class="layui-btn " lay-submit="formLeaveMessage" lay-filter="formLeaveMessage">提交评论</button>
                                    </div>
                                </form>
                                </div>
                        </fieldset>
                        <div class="blog-module-title ">最新评论</div>
                        <ul class="blog-comment " id="commentList"></ul>
                    </div>
                </div>

                <div class="blog-main-right ">

                    <div class="category-toggle "><i class="fa fa-chevron-left "></i></div>

                    <div class="article-category shadow ">
                        <div class="article-category-title ">分类导航</div>
                        <a href="/Home/Article">全部</a>
                        @foreach (var item in ViewBag.SysCmsColumnSelect)
                        {
                            <a href="/Home/Article?id=@item.Key">@item.Value</a>
                        }
                        <div class="clear "></div>
                    </div>
                    <div class="blog-module shadow ">
                        <div class="blog-module-title ">相似文章</div>
                        <ul class="blog-module-ul ">
                            @{ int j = 1;}
                            @foreach (SysCmsInfoSearchDto item in ViewBag.InfoTopCliks)
                            {
                                <li>
                                    <span>
                                        @if (j == 1)
                                        {
                                            <i class="layui-badge-rim layui-bg-red ">@(j++)</i>
                                        }
                                        else if (j == 2)
                                        {
                                            <i class="layui-badge-rim layui-bg-orange ">@(j++)</i>
                                        }
                                        else if (j == 3)
                                        {
                                            <i class="layui-badge-rim layui-bg-green ">@(j++)</i>
                                        }
                                        else
                                        {
                                            <i class="layui-badge-rim">@(j++)</i>
                                        }
                                    </span>
                                    &nbsp;&nbsp;<a href="/Home/Detail?id=@item.SysCmsInfoId ">@item.InfoTitle</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="blog-module shadow ">
                        <div class="blog-module-title ">随便看看</div>
                        <ul class="blog-module-ul ">
                            @{ j = 1;}
                            @foreach (SysCmsInfoSearchDto item in ViewBag.InfoTopComents)
                            {
                                <li>
                                    <span>
                                        @if (j == 1)
                                        {
                                            <i class="layui-badge-rim layui-bg-red ">@(j++)</i>
                                        }
                                        else if (j == 2)
                                        {
                                            <i class="layui-badge-rim layui-bg-orange ">@(j++)</i>
                                        }
                                        else if (j == 3)
                                        {
                                            <i class="layui-badge-rim layui-bg-green ">@(j++)</i>
                                        }
                                        else
                                        {
                                            <i class="layui-badge-rim">@(j++)</i>
                                        }
                                    </span>
                                    &nbsp;&nbsp;<a href="/Home/Detail?id=@item.SysCmsInfoId ">@item.InfoTitle</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="clear "></div>
        </div>
    </div>
</div>

<!-- 本页脚本 -->
@section Scripts{
    @*<script src="/js/Blog/about.js "></script>*@
    <script src="/js/Blog/detail.js "></script>
}
